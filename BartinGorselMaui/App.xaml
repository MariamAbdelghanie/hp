<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BartinGorselMaui.App">

    <Application.Resources>
        <ResourceDictionary>
            <!-- Light tema renkleri -->
            <Color x:Key="PageBackgroundColor">#FFFFFF</Color>
            <Color x:Key="TextColor">#000000</Color>
            <Color x:Key="ButtonBackground">#2D6CDF</Color>
            <Color x:Key="EntryBackground">#F0F0F0</Color>

            <!-- Dark tema renkleri -->
            <Color x:Key="PageBackgroundColorDark">#000000</Color>
            <Color x:Key="TextColorDark">#FFFFFF</Color>
            <Color x:Key="ButtonBackgroundDark">#444444</Color>
            <Color x:Key="EntryBackgroundDark">#222222</Color>

            <!-- ContentPage arka planı -->
            <Style TargetType="ContentPage">
                <Setter Property="BackgroundColor"
                        Value="{AppThemeBinding Light={StaticResource PageBackgroundColor}, Dark={StaticResource PageBackgroundColorDark}}" />
            </Style>

            <!-- Label yazı rengi -->
            <Style TargetType="Label">
                <Setter Property="TextColor"
                        Value="{AppThemeBinding Light={StaticResource TextColor}, Dark={StaticResource TextColorDark}}" />
            </Style>

            <!-- Entry -->
            <Style TargetType="Entry">
                <Setter Property="TextColor"
                        Value="{AppThemeBinding Light={StaticResource TextColor}, Dark={StaticResource TextColorDark}}" />
                <Setter Property="BackgroundColor"
                        Value="{AppThemeBinding Light={StaticResource EntryBackground}, Dark={StaticResource EntryBackgroundDark}}" />
            </Style>

            <!-- Button -->
            <Style TargetType="Button">
                <Setter Property="BackgroundColor"
                        Value="{AppThemeBinding Light={StaticResource ButtonBackground}, Dark={StaticResource ButtonBackgroundDark}}" />
                <Setter Property="TextColor"
                        Value="{AppThemeBinding Light={StaticResource TextColor}, Dark={StaticResource TextColorDark}}" />
            </Style>

            <!-- Shell (üst bar ve menü) -->
            <Style TargetType="Shell">
                <Setter Property="Shell.BackgroundColor"
                        Value="{AppThemeBinding Light={StaticResource PageBackgroundColor}, Dark={StaticResource PageBackgroundColorDark}}" />
                <Setter Property="Shell.TitleColor"
                        Value="{AppThemeBinding Light={StaticResource TextColor}, Dark={StaticResource TextColorDark}}" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>














