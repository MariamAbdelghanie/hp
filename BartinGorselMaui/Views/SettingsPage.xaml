<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BartinGorselMaui.Views.SettingsPage"
             Title="Ayarlar"
             BackgroundColor="{AppThemeBinding Light={StaticResource PageBackgroundColor}, Dark={StaticResource PageBackgroundColorDark}}">

    <VerticalStackLayout Padding="20" Spacing="20">

        <Label Text="Koyu Tema" FontSize="18" FontAttributes="Bold"
               TextColor="{AppThemeBinding Light={StaticResource TextColor}, Dark={StaticResource TextColorDark}}"/>

        <Switch x:Name="ThemeSwitch" Toggled="OnThemeToggled"/>

        <Button Text="Çıkış Yap"
                BackgroundColor="{AppThemeBinding Light={StaticResource ButtonBackground}, Dark={StaticResource ButtonBackgroundDark}}"
                TextColor="{AppThemeBinding Light={StaticResource TextColor}, Dark={StaticResource TextColorDark}}"
                Clicked="OnLogoutClicked"/>

    </VerticalStackLayout>
</ContentPage>









